# Force pnpm usage
package-manager=pnpm@8.15.0
auto-install-peers=true
strict-peer-dependencies=false

# Suppress peer dependency warnings (React 19 compatibility)
# These are warnings only - packages work fine with React 19
legacy-peer-deps=false

# Build speed optimizations
prefer-offline=true
# Allow lockfile updates during install to prevent build failures
# This ensures builds work even if package.json changes slightly
prefer-frozen-lockfile=false
side-effects-cache=true
shamefully-hoist=false
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*

# Suppress warnings for deprecated packages (they still work)
# Note: PUPPETEER_SKIP_CHROMIUM_DOWNLOAD must be set as an environment variable
# It's configured in vercel.json and vercel-build.sh
# .npmrc doesn't support environment variables directly
