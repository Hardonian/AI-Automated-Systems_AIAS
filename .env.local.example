# ============================================
# Environment Variables for Vercel Deployment
# ============================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to git (it's in .gitignore)
#
# For Vercel: Set these in Dashboard → Settings → Environment Variables
# For Local: Copy to .env.local and fill in values
# ============================================

# ============================================
# REQUIRED: Supabase Configuration
# ============================================
# Get these from: Supabase Dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# ============================================
# REQUIRED: Database Configuration
# ============================================
# For UpStash Postgres (recommended for Vercel):
UPSTASH_POSTGRES_URL=postgresql://user:password@host:port/database
UPSTASH_POSTGRES_DIRECT_URL=postgresql://user:password@host:port/database

# OR for standard PostgreSQL:
DATABASE_URL=postgresql://user:password@host:port/database
DIRECT_URL=postgresql://user:password@host:port/database

# ============================================
# REQUIRED: Application Configuration
# ============================================
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_SITE_URL=https://your-app.vercel.app
NEXTAUTH_URL=https://your-app.vercel.app
NEXTAUTH_SECRET=generate-a-random-secret-here-min-32-chars

# ============================================
# OPTIONAL: Stripe Configuration (for billing)
# ============================================
STRIPE_SECRET_KEY=sk_live_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# OPTIONAL: Email Configuration
# ============================================
# Resend (recommended)
RESEND_API_KEY=re_...

# OR SendGrid
SENDGRID_API_KEY=SG....

# OR SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_SECURE=false

# Email defaults
EMAIL_FROM=noreply@your-app.com
EMAIL_FROM_NAME=Your App Name
EMAIL_REPLY_TO=support@your-app.com
SUPPORT_EMAIL=support@your-app.com
INQUIRIES_EMAIL=inquiries@your-app.com

# Email cadence settings
EMAIL_CADENCE_ENABLED=true
EMAIL_CADENCE_SCHEDULE_HOUR=9
EMAIL_CADENCE_SCHEDULE_TIMEZONE=UTC
EMAIL_TRACKING_ENABLED=true
EMAIL_ANALYTICS_ENABLED=true

# ============================================
# OPTIONAL: OAuth Providers
# ============================================
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# OPTIONAL: Vercel/CI Configuration
# ============================================
VERCEL_TOKEN=your-vercel-token
SUPABASE_ACCESS_TOKEN=your-supabase-access-token
SUPABASE_PROJECT_REF=your-project-ref

# ============================================
# OPTIONAL: Storage Configuration
# ============================================
NEXT_PUBLIC_UPLOAD_BUCKET=public
SIGNING_SECRET=your-signing-secret

# ============================================
# OPTIONAL: Feature Flags
# ============================================
NEXT_PUBLIC_FEATURE_EMAIL_CADENCE=true
NEXT_PUBLIC_FEATURE_CONTENT_MARKETING=true
NEXT_PUBLIC_FEATURE_SOCIAL_MEDIA=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true

# ============================================
# OPTIONAL: Content Configuration
# ============================================
BLOG_ENABLED=true
BLOG_POSTS_PER_PAGE=10

# ============================================
# OPTIONAL: Logging & Monitoring
# ============================================
LOG_LEVEL=info

# ============================================
# OPTIONAL: OpenTelemetry (Observability)
# ============================================
ENABLE_OTEL=false
OTEL_SERVICE_NAME=aias-platform
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otel-endpoint.com

# ============================================
# Build-time Configuration
# ============================================
# Set to 'true' to skip environment validation during build
# Only use if you're certain all required vars are set in Vercel
SKIP_ENV_VALIDATION=false

# ============================================
# Node.js Configuration
# ============================================
NODE_ENV=production

# ============================================
# Notes:
# ============================================
# 1. All NEXT_PUBLIC_* variables are exposed to the browser
# 2. Never commit secrets to git
# 3. Use Vercel's environment variable management for production
# 4. For local development, use .env.local (gitignored)
# 5. Required variables will cause build failures if missing
# ============================================
