{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "ES2022",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "ai/aurora_prime.ts",
    "scripts/**/*",
    "supabase/functions/**/*",
    "ai/agent_config.json",
    "ai/ai_autoscale.ts",
    "ai/orchestrator.ts",
    "ai/self_diagnose.ts",
    "ai/unified_agent.ts",
    "ai/modules/**/*",
    "ai/insights_agent.mjs",
    "watchers/**/*",
    "ops/**/*",
    "vite.config.ts",
    "tsconfig.node.json"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/**/*.tsx",
    "components/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.ts",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}