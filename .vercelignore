# Vercel Build Ignore Patterns
# Files and directories to exclude from Vercel deployment

# Development and testing
tests/
*.test.ts
*.test.tsx
*.spec.ts
*.spec.tsx
__tests__/
__mocks__/

# Documentation
docs/
archive/
*.md
!README.md

# Scripts and automation
scripts/
watchers/
ops/
ai/

# Build artifacts (should be generated)
.next/
dist/
out/
build/
coverage/
.nyc_output/

# Development tools
.vscode/
.idea/
*.swp
*.swo

# Environment files (handled by Vercel)
.env
.env.local
.env*.local

# Supabase functions (deployed separately)
supabase/functions/

# Reports and diagnostics
reports/
*.log
vercel-build-diagnostic.txt

# Temporary files
tmp/
temp/
*.tmp
*.bak

# Git
# Note: .git/ is needed for ignoreCommand in vercel.json
# Vercel won't deploy .git/ even if not in .vercelignore
.gitignore

# Node modules (handled by Vercel)
node_modules/

# Prisma migrations (handled separately)
prisma/migrations/
