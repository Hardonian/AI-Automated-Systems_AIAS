{
  "crons": [
    {
      "path": "/api/cron/trial-emails",
      "schedule": "0 9 * * *"
    }
  ],
  "buildCommand": "pnpm run vercel-build",
  "installCommand": "pnpm install --frozen-lockfile || npm ci --legacy-peer-deps",
  "framework": "nextjs",
  "engines": {
    "node": "22.x"
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "functions": {
    "app/api/**": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ]
}
