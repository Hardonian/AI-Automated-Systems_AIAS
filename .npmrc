# Force pnpm usage - ensures consistent package manager across all environments
package-manager=pnpm@8.15.0

# Peer dependency handling
auto-install-peers=true
strict-peer-dependencies=false
# Note: legacy-peer-deps is npm-specific, pnpm handles peer deps differently

# Build reliability optimizations
prefer-offline=true
side-effects-cache=true

# Hoisting configuration for better compatibility
shamefully-hoist=false
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=*typescript*

# Workspace configuration
# Ensures workspace: protocol dependencies resolve correctly
link-workspace-packages=true

# Suppress warnings for deprecated packages (they still work)
# Note: PUPPETELE_SKIP_CHROMIUM_DOWNLOAD must be set as an environment variable
# It's configured in vercel.json build environment
# .npmrc doesn't support environment variables directly

# Security: Prevent accidental execution of scripts from untrusted sources
# (Can be overridden with --ignore-scripts if needed)
ignore-scripts=false
